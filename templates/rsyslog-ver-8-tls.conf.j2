{% for l in rsyslog_config %}
global(DefaultNetstreamDriverCAFile="{{ l.target_cacert }}")

*.* action(
  type="{{ l.type | default('omfwd') }}"
  target="{{ l.target_ip }}"
  port="{{ l.target_port | default(6514) }}"
  protocol="{{ l.target_protocol | default('tcp') }}"
  queue.type="{{ l.queue_type | default('LinkedList') }}"
  action.resumeRetryCount="{{ l.resume_retry_count | default(-1)  }}"
  queue.size="{{ l.queue_size | default(10000) }}"
  queue.saveonshutdown="{{ 'on' if l.queue_save_on_shutdown | default(true) else 'off' }}"
  queue.discardseverity="0"
  StreamDriver="{{ l.target_stream_driver | default('gtls') }}"
  StreamDriverMode="{{ l.target_stream_driver_mode | default(1) }}"
  StreamDriverAuthMode="{{ l.target_stream_driver_auth_mode | default('anon') }}"
)
{% endfor %}
